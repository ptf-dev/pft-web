---

<section class="relative pt-[72px] overflow-hidden">
  <!-- Starry gradient background -->
  <div class="absolute inset-0 bg-[#0A0A0A]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,rgba(139,92,246,0.2)_0%,transparent_60%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:24px_24px]"></div>

  <div class="relative max-w-[1158px] mx-auto px-6 pt-20 pb-16">
    <!-- Top: split layout -->
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-10">
      <!-- Left: text content -->
      <div class="max-w-[700px]">
        <span class="inline-flex items-center gap-2 px-4 py-1.5 border border-white/10 rounded-full text-sm text-[#9ca3af] mb-8">
          <span class="px-2 py-0.5 bg-emerald-500/20 text-emerald-400 text-xs font-medium rounded-full">New</span>
          All In One Solution For Prop Firms
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        </span>
        <h1 class="text-[48px] lg:text-[55px] font-bold leading-[1.1] tracking-tight">Power Your Prop Firm<br/>with our Cutting Edge Tech</h1>
        <p class="mt-5 text-lg text-[#9ca3af] max-w-[520px]">Launch your Prop Firm in just 14 days &mdash; from setup to brand to scaling...</p>
      </div>

      <!-- Right: avatars + CTAs -->
      <div class="flex flex-col items-start lg:items-end gap-6 lg:pt-16">
        <div class="flex items-center gap-3">
          <div class="flex -space-x-2.5">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 border-2 border-[#0A0A0A]"></div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-400 to-pink-500 border-2 border-[#0A0A0A]"></div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-400 to-blue-500 border-2 border-[#0A0A0A]"></div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-pink-400 to-purple-500 border-2 border-[#0A0A0A]"></div>
            <div class="w-10 h-10 rounded-full bg-white/10 border-2 border-[#0A0A0A] flex items-center justify-center text-xs text-white">+</div>
          </div>
          <span class="text-sm text-[#9ca3af]"><strong class="text-white">130+</strong> Active Users</span>
        </div>
        <div class="flex gap-3">
          <a href="#cta" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#8B5CF6] to-[#EC4899] rounded-full font-medium text-sm hover:opacity-90 transition-opacity">
            Book A Demo
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
          </a>
          <a href="#features" class="inline-flex items-center gap-2 px-6 py-3 border border-white/10 rounded-full font-medium text-sm hover:bg-white/5 transition-colors">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Dashboard screenshot placeholder -->
    <div class="mt-16 relative">
      <div class="absolute -inset-4 bg-gradient-to-b from-[#8B5CF6]/10 to-transparent rounded-2xl blur-2xl"></div>
      <div class="relative aspect-[1158/700] bg-[#111111] border border-white/10 rounded-xl overflow-hidden">
        <div class="p-4 flex gap-4 h-full">
          <!-- Sidebar -->
          <div class="w-[200px] shrink-0 bg-[#0A0A0A] rounded-lg p-4 flex flex-col gap-3">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-6 h-6 rounded bg-[#8B5CF6]/30"></div>
              <span class="text-xs text-white/60">PropFirmsTechs</span>
            </div>
            <div class="h-8 bg-[#8B5CF6]/20 rounded text-xs text-[#8B5CF6] flex items-center px-3">Dashboard</div>
            <div class="h-8 rounded text-xs text-white/40 flex items-center px-3">Transaction</div>
            <div class="h-8 rounded text-xs text-white/40 flex items-center px-3">Bills & Payment</div>
            <div class="h-8 rounded text-xs text-white/40 flex items-center px-3">Trading Account</div>
            <div class="h-8 rounded text-xs text-white/40 flex items-center px-3">Competitions</div>
          </div>
          <!-- Main content -->
          <div class="flex-1 flex flex-col gap-3">
            <div class="flex items-center justify-between">
              <span class="text-sm text-white/80">Dashboard</span>
              <div class="flex gap-2">
                <div class="h-7 px-3 bg-white/5 border border-white/10 rounded text-xs text-white/50 flex items-center">Check Daily Calculator</div>
                <div class="h-7 px-3 bg-white/5 border border-white/10 rounded text-xs text-white/50 flex items-center">Select Account</div>
                <div class="h-7 px-3 bg-emerald-500/20 border border-emerald-500/30 rounded text-xs text-emerald-400 flex items-center">Account active</div>
              </div>
            </div>
            <!-- Stat cards row -->
            <div class="flex gap-3">
              <div class="flex-1 bg-[#0A0A0A] rounded-lg p-4">
                <div class="text-xs text-red-400 mb-1">Current Balance</div>
                <div class="text-xs text-red-400 mb-1">Equity</div>
                <div class="text-lg font-semibold text-white">$52,548.00</div>
              </div>
              <div class="flex-1 bg-[#0A0A0A] rounded-lg p-4">
                <div class="text-xs text-emerald-400 mb-1">Total Balance</div>
                <div class="text-lg font-semibold text-white">$72,629.00</div>
              </div>
              <div class="flex-1 bg-[#0A0A0A] rounded-lg p-4">
                <div class="text-xs text-pink-400 mb-1">Withdrawal amount</div>
                <div class="text-lg font-semibold text-white">$24,587.00</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
