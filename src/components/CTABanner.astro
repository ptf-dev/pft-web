<section id="cta" class="relative pt-16 md:pt-[120px] pb-8 px-6 overflow-hidden">
  <!-- Tech circuit line background -->
  <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
    <line x1="0" y1="30%" x2="100%" y2="30%" stroke="rgba(100,136,255,0.08)" stroke-width="1"/>
    <line x1="0" y1="60%" x2="100%" y2="60%" stroke="rgba(100,136,255,0.06)" stroke-width="1"/>
    <line x1="10%" y1="0" x2="30%" y2="100%" stroke="rgba(100,136,255,0.05)" stroke-width="1"/>
    <line x1="70%" y1="0" x2="90%" y2="100%" stroke="rgba(100,136,255,0.05)" stroke-width="1"/>
    <line x1="0" y1="20%" x2="40%" y2="45%" stroke="rgba(100,136,255,0.07)" stroke-width="1"/>
    <line x1="60%" y1="45%" x2="100%" y2="20%" stroke="rgba(100,136,255,0.07)" stroke-width="1"/>
    <circle cx="30%" cy="45%" r="3" fill="rgba(100,136,255,0.15)"/>
    <circle cx="70%" cy="45%" r="3" fill="rgba(100,136,255,0.15)"/>
    <circle cx="10%" cy="30%" r="2" fill="rgba(100,136,255,0.12)"/>
    <circle cx="90%" cy="30%" r="2" fill="rgba(100,136,255,0.12)"/>
  </svg>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,rgba(27,24,254,0.15)_0%,transparent_60%)]"></div>

  <!-- CTA content -->
  <div class="relative max-w-[1158px] mx-auto text-center mb-16 md:mb-24">
    <h2 class="text-[28px] md:text-[44px] font-bold leading-tight italic">Let's Get To Building<br/>Your Dream Firm.</h2>
    <p class="mt-4 text-sm md:text-base text-[#8A8AA3] max-w-xl mx-auto">Request a demo today and discover the innovative features designed to enhance performance and collaboration.</p>
    <a href="#" class="mt-8 inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-[#6488FF] to-[#1B18FE] rounded-full text-base font-medium hover:opacity-90 transition-opacity">
      Request A Demo
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
    </a>
  </div>
</section>
