---
const cols = [
  [
    { value: '$202M+', label: 'Total partner revenue' },
    { value: '45K+', label: 'Accounts created monthly' },
    { value: '42%', label: 'Of workflows fully automated' },
  ],
  [
    { value: '45+', label: 'Integrations' },
    { value: '0M+', label: 'Unique traders onboarded' },
    { value: '24/7', label: 'Support coverage' },
  ],
];
const checks = [
  'Get MetaTrader 5 & MetaTrader 4 with no extra costs.',
  'Transparent pricing – no hidden fees.',
  'All-in-one solution: PSP integration, MetaTrader, and more.',
];
---

<section class="px-4 md:px-6 py-2">
<div class="bg-white rounded-[64px] py-16 md:py-[120px] px-6">
  <div class="max-w-[1160px] mx-auto">
    <!-- Stats grid -->
    <div class="flex flex-col md:flex-row gap-12 md:gap-16 mb-16 md:mb-[120px]">
      <div class="md:w-[45%] flex flex-col items-start reveal">
        <h2 class="text-[32px] md:text-[44px] font-bold leading-[1.2] text-[#01001C]">Scale. Speed. Control.</h2>
        <p class="mt-5 text-[15px] md:text-[16px] text-[#01001C]/60 leading-relaxed">Production-proven performance for modern trading firms. Automation-first infrastructure, real-time risk oversight, and global scale backed by measurable results.</p>
        <a href="#cta" class="mt-8 inline-flex items-center gap-2 px-6 py-3 bg-[#01001C] text-white rounded-full text-[16px] hover:opacity-90 transition-opacity">Book a Demo</a>
      </div>
      <div class="md:w-[55%] reveal delay-200">
        <div class="grid grid-cols-2 gap-x-16">
          {cols.map(col => (
            <div class="flex flex-col gap-[69px]">
              {col.map(s => (
                <div>
                  <div class="text-[24px] md:text-[30px] font-semibold text-[#01001C]">{s.value}</div>
                  <div class="text-[16px] md:text-[18px] text-[#01001C]/60 mt-1">{s.label}</div>
                </div>
              ))}
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- MetaTrader card -->
    <div class="reveal relative rounded-[44px] overflow-hidden min-h-[540px]">
      <img src="/images/features/mt4-features.png" alt="" class="absolute inset-0 w-full h-full object-cover" />
      <div class="relative flex flex-col md:flex-row items-center min-h-[540px]">
        <div class="md:w-[45%]"></div>
        <div class="md:w-[55%] p-6 md:py-10 md:pr-12">
          <span class="inline-block px-4 py-2 bg-white rounded-full text-sm font-medium text-[#01001C] mb-4">Our Platforms</span>
          <h3 class="text-2xl md:text-[40px] font-bold leading-[1.15] mb-3 text-white">Meta Trader 4 & 5<br/>Supported – No Extra Fees</h3>
          <p class="text-[16px] text-white/70 mb-6 leading-relaxed">Successful Trading Starts With Convenient And Functional Trading. MetaTrader 5 Is The Best Choice For The Modern Trader.</p>
          <ul class="space-y-2">
            {checks.map(text => (
              <li class="flex items-center gap-3 py-2.5 px-5 rounded-full bg-white/10 backdrop-blur-sm text-[14px] font-medium text-white">
                <svg class="w-4 h-4 text-white/70 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/></svg>
                {text}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
