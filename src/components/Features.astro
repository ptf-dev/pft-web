<section id="features" class="py-16 md:py-[120px] px-6">
  <div class="max-w-[1158px] mx-auto">
    <div class="text-center mb-12 reveal">
      <span class="inline-block px-4 py-2 border border-[rgba(100,136,255,0.12)] rounded-full text-sm text-[#8A8AA3]">Features</span>
      <h2 class="mt-6 text-[36px] md:text-[55px] font-bold">Powerful Features</h2>
    </div>
    <div class="grid md:grid-cols-2 gap-5">
      <div class="reveal relative rounded-xl overflow-hidden h-[300px] md:h-[400px]">
        <img src="/images/features/risk-intelligence.png" alt="Risk Intelligence" class="absolute inset-0 w-full h-full object-cover" />
      </div>
      <div class="reveal delay-100 relative rounded-xl overflow-hidden h-[300px] md:h-[400px]">
        <img src="/images/features/psps-payments.png" alt="PSPs & Payment Solutions" class="absolute inset-0 w-full h-full object-cover" />
      </div>
    </div>
    <div class="mt-5 reveal bg-[#0A0A2E] border border-[rgba(100,136,255,0.1)] rounded-xl p-6 md:p-8 flex flex-col md:flex-row items-center gap-8">
      <div class="flex-1">
        <h3 class="text-xl md:text-[25px] font-bold">Ready to Get Started?</h3>
        <p class="mt-2 text-[#8A8AA3] text-base md:text-xl">Launch your prop firm with cutting-edge technology and dedicated support.</p>
        <a href="#cta" class="mt-6 inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#6488FF] to-[#1B18FE] rounded-full font-medium hover:opacity-90 transition-opacity">Book a Demo <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></a>
      </div>
      <img src="/images/features/feature-image.png" alt="PropFirmsTech Features" class="w-full md:w-[300px] h-[200px] object-cover rounded-xl" />
    </div>
  </div>
</section>
