<section id="features" class="py-[120px] px-6">
  <div class="max-w-[1158px] mx-auto">
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-2 border border-[rgba(255,255,255,0.08)] rounded-full text-sm text-[#A0A0A0]">Features</span>
      <h2 class="mt-6 text-[55px] font-bold">Powerful Features</h2>
    </div>
    <div class="grid md:grid-cols-2 gap-5">
      <div class="relative bg-[#111111] border border-[rgba(255,255,255,0.08)] rounded-xl overflow-hidden h-[400px] p-8 flex flex-col justify-end">
        <div class="absolute inset-0 bg-gradient-to-t from-[#0A0A0A] via-transparent to-transparent"></div>
        <div class="absolute top-8 left-8 right-8 space-y-3">
          <div class="flex items-center justify-between bg-[#0A0A0A] rounded-lg p-3">
            <div class="flex items-center gap-3"><div class="w-8 h-8 rounded-full bg-[#8B5CF6]/20"></div><span class="text-sm">#4876 Jay Anderson</span></div>
            <span class="text-xs px-2 py-1 rounded bg-red-500/20 text-red-400">Breached</span>
          </div>
          <div class="flex items-center justify-between bg-[#0A0A0A] rounded-lg p-3">
            <div class="flex items-center gap-3"><div class="w-8 h-8 rounded-full bg-[#8B5CF6]/20"></div><span class="text-sm">#4877 Sarah Chen</span></div>
            <span class="text-xs px-2 py-1 rounded bg-emerald-500/20 text-emerald-400">Passed</span>
          </div>
          <div class="flex items-center justify-between bg-[#0A0A0A] rounded-lg p-3">
            <div class="flex items-center gap-3"><div class="w-8 h-8 rounded-full bg-[#8B5CF6]/20"></div><span class="text-sm">#4878 Mike Torres</span></div>
            <span class="text-xs px-2 py-1 rounded bg-yellow-500/20 text-yellow-400">Review</span>
          </div>
        </div>
        <div class="relative z-10">
          <h3 class="text-[25px] font-bold">Risk Intelligence</h3>
          <p class="mt-2 text-[#A0A0A0] text-xl">Continuous, real-time checks detect and prevent threats.</p>
        </div>
      </div>
      <div class="relative bg-[#111111] border border-[rgba(255,255,255,0.08)] rounded-xl overflow-hidden h-[400px] p-8 flex flex-col justify-end">
        <div class="absolute inset-0 bg-gradient-to-t from-[#0A0A0A] via-transparent to-transparent"></div>
        <div class="absolute top-8 left-8 right-8 grid grid-cols-3 gap-3">
          {['PayPal', 'Stripe', 'BTC', 'VISA', 'Mastercard', 'USDT'].map(n => (
            <div class="bg-[#0A0A0A] rounded-lg p-4 text-center text-sm text-[#A0A0A0] border border-[rgba(255,255,255,0.05)]">{n}</div>
          ))}
        </div>
        <div class="relative z-10">
          <h3 class="text-[25px] font-bold">PSPs & Payment Solutions</h3>
          <p class="mt-2 text-[#A0A0A0] text-xl">Accept Payments easily with Card & Crypto.</p>
        </div>
      </div>
    </div>
    <div class="mt-5 bg-[#111111] border border-[rgba(255,255,255,0.08)] rounded-xl p-8 flex flex-col md:flex-row items-center gap-8">
      <div class="flex-1">
        <h3 class="text-[25px] font-bold">Ready to Get Started?</h3>
        <p class="mt-2 text-[#A0A0A0] text-xl">Launch your prop firm with cutting-edge technology and dedicated support.</p>
        <a href="#cta" class="mt-6 inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#8B5CF6] to-[#EC4899] rounded-full font-medium hover:opacity-90 transition-opacity">Book a Demo <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></a>
      </div>
      <div class="w-full md:w-[300px] h-[200px] bg-[#0A0A0A] rounded-xl border border-[rgba(255,255,255,0.08)] flex items-center justify-center">
        <span class="text-[#A0A0A0] text-sm">Photo</span>
      </div>
    </div>
  </div>
</section>
