---
const partners = [
  { name: 'MetaTrader 5', file: 'metatrader5' },
  { name: 'Match Trader', file: 'match-trader' },
  { name: 'Sumsub', file: 'sumsub' },
  { name: 'WooCommerce', file: 'woocommerce' },
  { name: 'Veriff', file: 'veriff' },
  { name: 'Stripe', file: 'stripe' },
  { name: 'Rise', file: 'rise' },
  { name: 'Confirmo', file: 'confirmo' },
];
---

<section class="py-[120px] px-6">
  <div class="max-w-[1158px] mx-auto">
    <div class="flex flex-col md:flex-row gap-12 mb-12">
      <h2 class="text-[55px] font-bold md:w-1/2 leading-tight">Easy Built-In Integrations</h2>
      <p class="text-xl text-[#A0A0A0] md:w-1/2">Our solutions seamlessly integrate with a powerful suite of 13 essential tools and platforms, empowering you with comprehensive control over your business processes.</p>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-5">
      {partners.map(p => (
        <div class="bg-[#111111] border border-[rgba(255,255,255,0.08)] rounded-xl h-28 flex items-center justify-center">
          <img src={`/images/partners/${p.file}.svg`} alt={p.name} class="h-10 w-auto" />
        </div>
      ))}
    </div>
  </div>
</section>
