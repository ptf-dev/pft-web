---
const socials = [
  { name: 'Instagram', file: 'instagram' },
  { name: 'Facebook', file: 'facebook' },
  { name: 'YouTube', file: 'youtube' },
  { name: 'Telegram', file: 'telegram' },
  { name: 'X', file: 'x' },
];
---

<footer class="border-t border-[rgba(255,255,255,0.08)] pt-16 pb-8 px-6">
  <div class="max-w-[1158px] mx-auto">
    <div class="flex flex-col md:flex-row justify-between gap-12 mb-12">
      <div class="max-w-sm">
        <img src="/images/logo.svg" alt="PropFirmsTech" class="h-8" />
        <p class="mt-4 text-xl text-[#A0A0A0]">Empowering proprietary trading firms with cutting-edge technology solutions.</p>
      </div>
      <div class="flex gap-16">
        <div>
          <h4 class="font-semibold mb-4">Company</h4>
          <nav aria-label="Company links" class="flex flex-col gap-3">
            <a href="#" class="text-[#A0A0A0] hover:text-white transition-colors">About</a>
            <a href="#features" class="text-[#A0A0A0] hover:text-white transition-colors">Features</a>
            <a href="#cta" class="text-[#A0A0A0] hover:text-white transition-colors">Contact</a>
          </nav>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Social</h4>
          <div class="flex gap-4">
            {socials.map(s => (
              <a href="#" class="opacity-60 hover:opacity-100 transition-opacity" aria-label={s.name}>
                <img src={`/images/social/${s.file}.svg`} alt={s.name} class="w-5 h-5" />
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
    <div class="border-t border-[rgba(255,255,255,0.08)] pt-8 flex flex-col md:flex-row justify-between text-sm text-[#A0A0A0]">
      <span>&copy; {new Date().getFullYear()} PropFirmsTech. All rights reserved.</span>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a href="#" class="hover:text-white transition-colors">Privacy Policy</a>
        <a href="#" class="hover:text-white transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
